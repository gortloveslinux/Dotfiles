#!/bin/bash

action=$1
shift

function usage() {
  cat <<EOF
    edit
      Open specified .txt file in editor (todo.txt by default).
EOF
  exit
}

[ "$action" = "usage" ] && usage

FILE=${1:-todo}.txt
if [ -n "$EDITOR" ]; then
  $EDITOR $TODO_DIR/$FILE
else
  echo "Error: Set editor. export EDITOR=<your editor>"
fi
